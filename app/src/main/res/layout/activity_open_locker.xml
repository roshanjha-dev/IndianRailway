<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/lockerconfirmation"
    tools:context="com.example.rohandsouza.indianrailways.OpenLocker">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f90404"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Press on the Open Lock to do the payment and opening the lock" />

    <Button
        android:id="@+id/openLock"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:text="Open Lock" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_marginTop="100sp"
        android:text="Enter the OTP for the confirmation and Press Done to do the payment" />

    <EditText
        android:id="@+id/editText13"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#fffefe"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:hint="Enter OTP" />

    <Button
        android:id="@+id/button15"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_gravity="center"
        android:background="@drawable/button"/>

</LinearLayout>
