<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockerconfirmation"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locker Confirmation"
        android:textAlignment="center"
        android:textColor="#e60d0d"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Locker No"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginRight="20sp"
            android:textColor="#1100ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="lockerno"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="#ffffff"
        android:text="Confirm the number for verification code"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_weight="0.75"
            android:background="#ffffff"
            android:textAlignment="center"
            android:ems="10"
            android:text="7733884259"
            android:hint="number"
            android:inputType="number" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="Confirm" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200sp"
        android:textColor="#ffffff"
        android:text="Enter the Code to open the Locker"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:background="@drawable/button2"
        android:text="Done" />

</LinearLayout>